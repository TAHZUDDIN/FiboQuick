<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">


<TextView
    android:id="@+id/id_TextView_rank"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="Rank"/>

<TextView
    android:layout_width="1dp"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    />


<TextView
    android:id="@+id/id_TextView_name"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="Name"
    android:layout_marginLeft="@dimen/headingtext_margleft"/>

<TextView
    android:layout_width="1dp"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    />

<TextView
    android:id="@+id/id_TextView_english"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="English"
    android:layout_marginLeft="@dimen/headingtext_margleft"/>

<TextView
    android:layout_width="1dp"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    />


<TextView
    android:id="@+id/id_TextView_math"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="Math"
    android:layout_marginLeft="@dimen/headingtext_margleft"/>

<TextView
    android:layout_width="1dp"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    />


<TextView
    android:id="@+id/id_TextView_science"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:text="Science"
    android:layout_marginLeft="@dimen/headingtext_margleft"/>

<TextView
    android:layout_width="1dp"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    />


<TextView
    android:id="@+id/id_TextView_total"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:textAlignment="center"
    android:layout_height="wrap_content"
    android:text="Total "/>


</LinearLayout><!--Heading titles ending here-->